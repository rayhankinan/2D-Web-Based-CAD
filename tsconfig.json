{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "public/dist",
    "paths": {
      "Utils/*": ["./src/Utils/*"],
      "Objects/*": ["./src/Objects/*"],
      "Operations/*": ["./src/Operations/*"],
      "Interfaces/*": ["./src/Interfaces/*"]
    }
  },
  "include": ["src/**/*"]
}
